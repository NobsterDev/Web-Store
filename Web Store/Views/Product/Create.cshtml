@model Web_Store.Models.product

@{
    Layout = "~/Views/MasterPages/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Product</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">Item Name</label>
                <div class="col-md-10">
                    <input class="form-control" id="ItemName" name="ItemName" type="text" value="" placeholder="Name" required>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Item Price</label>
                <div class="col-md-10">
                    <input class="form-control" data-val="true" id="ItemPrice" name="ItemPrice" pattern="^[0-9]+\.[0-9][0-9]$" type="text" placeholder="0.00" required>
                </div>
            </div>

           <div class="form-group">
               <div class="col-md-offset-2 col-md-10">
                   <input type="submit" value="Create" class="btn btn-primary" />
                   <button type="button" class="btn btn-light">
                       @Html.ActionLink("Back to List", "Index")
                   </button>
               </div>
            </div>
        </div>
    }

</body>
</html>
