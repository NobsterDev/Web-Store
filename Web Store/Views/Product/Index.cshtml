@model IEnumerable<Web_Store.Models.product>

@{
    Layout = "~/Views/MasterPages/_AdminLayout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>

    <script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
    </script>
</head>
<body>
    <h1 class="text-center">Products</h1>
    <hr />
    <div class="container">
        <div class="row">
            <div class="col-md-10">
                <input class="form-control" id="myInput" type="text" placeholder="Search..">
            </div>
            <div class="col-md-auto">
                <button type="button" class="btn btn-light">@Html.ActionLink("Create New", "Create")</button>
            </div>
        </div>


    </div>
    <h1></h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col">
                    ID
                </th>
                <th scope="col">
                    Item Names
                </th>
                <th scope="col">
                    Item Prices
                </th>
                <th scope="col">
                    Actions
                </th>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">
                        @Html.DisplayFor(modelItem => item.idItems)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ItemPrice)
                    </td>
                    <td>
                        <button type="button" class="btn btn-outline-primary">@Html.ActionLink("Edit", "Edit", new { id = item.idItems })</button>
                        <button type="button" class="btn btn-outline-primary">@Html.ActionLink("Delete", "Delete", new { id = item.idItems })</button>


                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>
</html>
